FROM node:16.13.0-alpine as base
ENV DIRPATH=/
ENV PORT=3000

WORKDIR ${DIRPATH}
EXPOSE ${PORT}

FROM base as dev
RUN --mount=type=bind,source=package.json,target=package.json \
    --mount=type=bind,source=package-lock.json,target=package-lock.json \
    npm ci --include=dev
USER node
COPY . .
CMD npm run dev

FROM base as prod
RUN --mount=type=bind,source=package.json,target=package.json \
    --mount=type=bind,source=package-lock.json,target=package-lock.json \
    npm ci --omit=dev
USER node
COPY . .
CMD npm run start